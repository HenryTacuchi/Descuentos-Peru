<?xml version='1.0' encoding='utf-8'?>
<widget id="www.descuentosPeru.com" 
    version="0.0.1"
    versionCode="1" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Descuentos Per√∫</name>
    <description>
        Encuentre los mejores descuentos
    </description>
    <author href="http://retailcs.com/" email="devmobile@realcs.com">
        Retail Custom Solutions
    </author>
    <content src="index.html" />
    <preference name="AutoHideSplashScreen"  value= "true"  />
    <preference name="SplashScreenDelay"  value= "2000"  />
    <preference name="FadeSplashScreen"  value= "true" />
    <preference name="FadeSplashScreenDuration"  value= "1000" />
    <preference name="ShowSplashScreenSpinner"  value= "false" />
    <preference name="SplashShowOnlyFirstTime"  value= "false"  />


    <preference name="Fullscreen" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#2196F3"/>
    <preference name="StatusBarStyle" value="lightcontent" />





    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />



    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/res/icon/android/36.png"  qualifier="ldpi"/>
        <icon src="www/res/icon/android/48.png"  qualifier="mdpi"/>
        <icon src="www/res/icon/android/72.png"  qualifier="hdpi"/>
        <icon src="www/res/icon/android/96.png"  qualifier="xhdpi"/>
        <icon src="www/res/icon/android/144.png" qualifier="xxhdpi"/>
        <icon src="www/res/icon/android/192.png" qualifier="xxxhdpi"/>

        <splash src="www/res/screen/android/ldpi.png" density="ldpi"/>
        <splash src="www/res/screen/android/mdpi.png" density="mdpi"/>
        <splash src="www/res/screen/android/hdpi.png" density="hdpi"/>
        <splash src="www/res/screen/android/xhdpi.png" density="xhdpi"/>
        <splash src="www/res/screen/android/portrait-xxhdpi.png" density="port-xxhdpi"/>
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <icon src="www/res/icon/ios/i57.png" width="57" height="57" />
        <icon src="www/res/icon/ios/i72.png" width="72" height="72" />
        <icon src="www/res/icon/ios/i114.png" width="114" height="114" />
        <icon src="www/res/icon/ios/i144.png" width="144" height="144" />
        <icon src="www/res/icon/ios/i76.png" width="76" height="76" />
        <icon src="www/res/icon/ios/i120.png" width="120" height="120" />
        <icon src="www/res/icon/ios/i152.png" width="152" height="152" />


        <splash src="www/res/screen/ios/Default.png" width="320" height="480" />
        <splash src="www/res/screen/ios/Default@2x.png" width="640" height="960" />
        <!-- iPhone 5 / iPod Touch (5th Generation) -->
        <splash src="www/res/screen/ios/Default-568h@2x.png" width="640" height="1136" />
        <!-- iPhone 6 -->
        <splash src="www/res/screen/ios/Default-667h@2x.png" width="750" height="1334" />
        <splash src="www/res/screen/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" />

        <!-- iPad -->
        <splash src="www/res/screen/ios/Default-Portrait.png" width="768" height="1024" />
        <!-- Retina iPad -->
        <splash src="www/res/screen/ios/Default-Portrait@2x.png" width="1536" height="2048" />
    </platform>

</widget>
